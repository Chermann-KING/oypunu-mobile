# Environment configuration for O'Ypunu Mobile App
# Copy this file to .env.local for local development overrides

# API Configuration
# Production API (default - always works)
EXPO_PUBLIC_API_URL=https://oypunu-production.up.railway.app/api

# Local development 
# For mobile testing, use your local IP instead of localhost
# Find your IP with: ip route get 1 | awk '{print $7}' | head -1
# EXPO_PUBLIC_API_URL=http://YOUR_LOCAL_IP:3000/api
# Example: EXPO_PUBLIC_API_URL=http://192.168.1.100:3000/api

# WebSocket Configuration  
EXPO_PUBLIC_WEBSOCKET_URL=https://oypunu-production.up.railway.app

# Local development WebSocket 
# EXPO_PUBLIC_WEBSOCKET_URL=http://YOUR_LOCAL_IP:3000

# Development settings
EXPO_PUBLIC_ENABLE_LOGGING=true
EXPO_PUBLIC_TIMEOUT=10000